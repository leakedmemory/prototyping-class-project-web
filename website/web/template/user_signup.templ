package template

templ UserSignUp() {
	@doctype() {
		@head("Cadastro") {
			<style>
        main {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          height: 100vh;
        }
      </style>
		}
		@body() {
			<main class="container">
				<form hx-post="/user/signup">
					<fieldset>
						<label>
							Nome:
							<input
								name="name"
								type="text"
								placeholder="Insira seu nome"
								required
							/>
						</label>
						<label>
							Email:
							<input
								name="email"
								type="email"
								placeholder="Insira seu email"
								required
							/>
						</label>
						<label>
							Telefone:
							<input
								name="phone"
								type="tel"
								placeholder="Insira seu telefone para contato"
								required
							/>
						</label>
						<label>
							Senha:
							<input
								name="password"
								type="password"
								placeholder="Insira a senha desejada"
								required
							/>
						</label>
					</fieldset>
					<input type="submit" value="Cadastrar"/>
				</form>
				<p>
					JÃ¡ possui uma conta? <a href="/login">Fazer login</a>
				</p>
			</main>
		}
	}
}
